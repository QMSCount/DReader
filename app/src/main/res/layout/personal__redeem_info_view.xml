<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.duokan.reader.ui.general.PageHeaderView
        android:id="@id/personal__redeem_info_view__header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <com.duokan.core.ui.FrameScrollView
        android:background="@color/general__shared__ebebeb"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:background="@color/store__shared__bg"
                android:padding="15.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <com.duokan.reader.ui.general.BookCoverView
                    android:layout_gravity="center_horizontal"
                    android:id="@id/personal__redeem_info_view__book_cover"
                    android:layout_marginTop="25.0dip"
                    style="@style/general__shared__cover_detail" />

                <com.duokan.reader.ui.general.DkLabelView
                    android:textSize="@dimen/general_font__shared__b"
                    android:textColor="@color/general__shared__333333"
                    android:layout_gravity="center_horizontal"
                    android:id="@id/personal__redeem_info_view__title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25.0dip" />

                <com.duokan.reader.ui.general.DkLabelView
                    android:textSize="@dimen/general_font__shared__c"
                    android:textColor="@color/general__shared__999999"
                    android:layout_gravity="center_horizontal"
                    android:id="@id/personal__redeem_info_view__author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip" />
            </LinearLayout>

            <FrameLayout
                android:id="@id/personal__redeem_info_view__arrow"
                android:background="@color/store__shared__bg"
                android:layout_width="fill_parent"
                android:layout_height="10.0dip">

                <View
                    android:background="@drawable/personal__redeem_info_view"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@id/personal__redeem_info_view__useded"
                android:padding="15.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/personal__redeem_info_view__msg_root"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <com.duokan.reader.ui.general.deprecatedDkTextView
                        android:textSize="@dimen/general_font__shared__c"
                        android:textColor="@color/general__shared__333333"
                        android:id="@id/personal__redeem_info_view__msg_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.duokan.reader.ui.general.DkLabelView
                        android:textSize="@dimen/general_font__shared__c"
                        android:textColor="@color/general__shared__999999"
                        android:layout_gravity="right"
                        android:id="@id/personal__redeem_info_view__msg_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip" />

                    <View
                        android:background="@color/general__shared__bcbcbc"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:layout_marginTop="30.0dip"
                        android:layout_marginBottom="30.0dip" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.duokan.reader.ui.general.DkBigFaceView
                        android:id="@id/personal__redeem_info_view__received_face"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20.0dip"
                        android:layout_toRightOf="@id/personal__redeem_info_view__received_face"
                        android:layout_centerVertical="true">

                        <com.duokan.reader.ui.general.DkLabelView
                            android:textSize="@dimen/general_font__shared__c"
                            android:textColor="@color/general__shared__333333"
                            android:id="@id/personal__redeem_info_view__received_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.duokan.reader.ui.general.DkLabelView
                            android:textSize="@dimen/general_font__shared__c"
                            android:textColor="@color/general__shared__999999"
                            android:id="@id/personal__redeem_info_view__received_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@id/personal__redeem_info_view__unused"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/store__shared__bg"
                    android:paddingBottom="15.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <com.duokan.reader.ui.general.DkLabelView
                        android:textSize="@dimen/general_font__shared__c"
                        android:textColor="@color/general__shared__999999"
                        android:id="@id/personal__redeem_info_view__msg"
                        android:background="@drawable/general__shared__edit_text_box"
                        android:padding="15.0dip"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="15.0dip"
                        android:text="@string/personal__personal_redeem_info_view__hint"
                        android:layout_weight="1.0" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="15.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <com.duokan.reader.ui.general.DkLabelView
                        android:textSize="@dimen/general_font__shared__c"
                        android:textColor="@color/general__shared__666666"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/personal__personal_redeem_info_view__label" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20.0dip">

                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@id/personal__redeem_info_view__sms"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0">

                            <ImageView
                                android:layout_gravity="center_horizontal"
                                android:id="@id/personal__redeem_info_view__sms_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/general__shared__sms_icon" />

                            <com.duokan.reader.ui.general.DkLabelView
                                android:textSize="@dimen/general_font__shared__c"
                                android:textColor="@color/general__shared__666666_disabled"
                                android:layout_gravity="bottom|center"
                                android:id="@id/personal__redeem_info_view__sms_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10.0dip"
                                android:text="@string/personal__personal_redeem_info_view__sms" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@id/personal__redeem_info_view__wx"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0">

                            <ImageView
                                android:layout_gravity="center_horizontal"
                                android:id="@id/personal__redeem_info_view__wx_icon"
                                android:background="@drawable/general__shared__weichat_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <com.duokan.reader.ui.general.DkLabelView
                                android:textSize="@dimen/general_font__shared__c"
                                android:textColor="@color/general__shared__666666_disabled"
                                android:layout_gravity="bottom|center"
                                android:id="@id/personal__redeem_info_view__wx_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10.0dip"
                                android:text="@string/personal__personal_redeem_info_view__weixin" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@id/personal__redeem_info_view__more"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0">

                            <ImageView
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/general__shared__other_icon" />

                            <com.duokan.reader.ui.general.DkLabelView
                                android:textSize="@dimen/general_font__shared__c"
                                android:textColor="@color/general__shared__666666"
                                android:layout_gravity="bottom|center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10.0dip"
                                android:text="@string/personal__personal_redeem_info_view__more" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@id/personal__redeem_info_view__placeholder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.duokan.core.ui.FrameScrollView>
</LinearLayout>