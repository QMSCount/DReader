<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:id="@id/reading__reading_comic_more_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:id="@id/reading__reading_comic_more_view__book_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/reading__reading_comic_more_view__book_detail"
                android:layout_width="fill_parent"
                android:layout_height="103.29999dip">

                <com.duokan.reader.ui.general.BookCoverView
                    android:layout_gravity="center_vertical"
                    android:id="@id/reading__reading_comic_more_view__book_detail_cover"
                    android:background="@drawable/bookshelf__store_book_view__stroke"
                    android:padding="1.0px"
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginRight="10.0dip" />

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20.0dip"
                    android:layout_weight="1.0">

                    <TextView
                        android:textSize="@dimen/general_font__shared__c"
                        android:textColor="#ffdfdfdf"
                        android:gravity="center"
                        android:id="@id/reading__reading_comic_more_view__book_detail_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="@dimen/general_font__shared__d"
                        android:textColor="#ff8f8f8f"
                        android:id="@id/reading__reading_comic_more_view__book_detail_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:textSize="@dimen/general_font__shared__c"
                android:textColor="@color/general__shared__999999_selected"
                android:gravity="center|left"
                android:layout_gravity="left"
                android:id="@id/reading__reading_comic_more_view__auto_pay"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:paddingBottom="15.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/reading__reading_more_view__auto_pay"
                android:drawableLeft="@drawable/reading__reading_more_view__auto_pay"
                android:drawableRight="@drawable/general__shared__switch_dark"
                android:drawablePadding="15.0dip"
                android:layout_weight="1.0" />
        </LinearLayout>

        <View
            android:layout_gravity="bottom"
            android:id="@id/reading__reading_comic_more_view__split"
            android:background="#ff908f8f"
            android:layout_width="fill_parent"
            android:layout_height="1.0px" />

        <com.duokan.reader.ui.general.DkLabelView
            android:textSize="@dimen/general_font__shared__c"
            android:textColor="@color/general__shared__999999_selected"
            android:gravity="center|left"
            android:layout_gravity="left"
            android:id="@id/reading__reading_comic_more_view__bookmark"
            android:paddingLeft="20.0dip"
            android:paddingTop="25.0dip"
            android:paddingRight="20.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/reading__reading_more_view__bookmark"
            android:drawableLeft="@drawable/reading__reading_more_view__bookmark"
            android:drawablePadding="15.0dip" />

        <com.duokan.reader.ui.general.DkLabelView
            android:textSize="@dimen/general_font__shared__c"
            android:textColor="@color/general__shared__999999_selected"
            android:gravity="center|left"
            android:layout_gravity="left"
            android:id="@id/reading__reading_comic_more_view__share"
            android:paddingLeft="20.0dip"
            android:paddingTop="25.0dip"
            android:paddingRight="20.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/reading__reading_more_view__share"
            android:drawableLeft="@drawable/reading__reading_more_view__share"
            android:drawablePadding="15.0dip"
            android:layout_weight="1.0" />

        <com.duokan.reader.ui.general.DkLabelView
            android:textSize="@dimen/general_font__shared__c"
            android:textColor="@color/general__shared__999999_selected"
            android:gravity="center|left"
            android:layout_gravity="left"
            android:id="@id/reading__reading_comic_more_view__settings"
            android:paddingLeft="20.0dip"
            android:paddingTop="25.0dip"
            android:paddingRight="20.0dip"
            android:paddingBottom="25.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/reading__reading_more_view__settings"
            android:drawableLeft="@drawable/reading__reading_more_view__settings"
            android:drawablePadding="15.0dip"
            android:layout_weight="1.0" />
    </LinearLayout>

    <com.duokan.core.ui.ExtendView
        android:enabled="false"
        android:layout_gravity="bottom"
        android:id="@id/reading__reading_comic_more_view__sub_menu_frame"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</FrameLayout>