<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/general__shared__welcome_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@id/welcome__welcome_view__pic"
            android:paddingBottom="75.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerInside" />
    </FrameLayout>

    <FrameLayout
        android:id="@id/welcome__welcome_view__shadow"
        android:background="@drawable/welcome__welcome_view__shadow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/general_font__shared__d"
        android:textColor="@color/general__shared__ffffffcc"
        android:gravity="center"
        android:id="@id/welcome__welcome_view__skip"
        android:background="@drawable/welcome__welcome_view__skip"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:layout_marginTop="25.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginBottom="15.0dip"
        android:text="@string/general__shared__skip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:textSize="@dimen/general_font__shared__c"
        android:textColor="@color/general__shared__585858"
        android:gravity="center"
        android:id="@id/welcome__welcome_view__tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginBottom="20.0dip"
        android:drawablePadding="5.0dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>