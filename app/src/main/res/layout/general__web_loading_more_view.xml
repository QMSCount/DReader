<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@id/general__dk_web_loading_more_view__root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/general__web_loading_more_view__loading"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:layout_width="22.0dip"
            android:layout_height="22.0dip"
            android:layout_marginRight="20.0dip"
            style="@style/refresh_progressbar" />

        <com.duokan.reader.ui.general.DkLabelView
            android:textColor="#ff999999"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:singleLine="true" />
    </LinearLayout>

    <FrameLayout
        android:id="@id/general__web_loading_more_view__footer_frame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>