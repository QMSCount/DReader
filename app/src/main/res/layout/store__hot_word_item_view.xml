<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_vertical"
    android:background="@color/general__shared__ffffff"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@id/store__hot_word_item_view__icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/search__hot_world_item_view__hint" />

    <com.duokan.reader.ui.general.DkLabelView
        android:textSize="@dimen/general_font__shared__c"
        android:textColor="@color/general__shared__a3a3a3"
        android:gravity="center_vertical"
        android:id="@id/store__hot_word_item_view__text"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:minHeight="50.0dip"
        android:singleLine="true"
        android:layout_weight="1.0" />

    <ImageView
        android:id="@id/store__hot_word_item_view__close"
        android:padding="5.0dip"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bookshelf__header_ads_view__close" />
</LinearLayout>