<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.duokan.reader.ui.general.DkLabelView
                android:textSize="@dimen/general_font__shared__b"
                android:textColor="@color/general__shared__333333"
                android:id="@id/scanning_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/general__shared__ffffffcc"
                android:shadowDx="0.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0" />
        </LinearLayout>

        <com.duokan.reader.ui.general.DkLabelView
            android:textColor="@color/general__shared__898989"
            android:gravity="center"
            android:id="@id/scanning_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip" />
    </LinearLayout>

    <com.duokan.reader.ui.general.DkLabelView
        android:id="@id/scanning_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.0dip"
        android:text="@string/general__shared__cancel"
        style="@style/general__shared__button_43dip_ffffff" />
</LinearLayout>