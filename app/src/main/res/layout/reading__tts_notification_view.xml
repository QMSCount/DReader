<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@id/reading__tts_notification_view__icon"
        android:layout_width="39.0dip"
        android:layout_height="39.0dip"
        android:layout_marginLeft="3.0dip"
        android:src="@drawable/logo"
        android:scaleType="centerInside" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10.0dip"
        android:layout_weight="1.0">

        <TextView
            android:textSize="@dimen/general_font__shared__b"
            android:textColor="@color/general__shared__ffffff"
            android:id="@id/reading__tts_notification_view__title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true" />

        <TextView
            android:textSize="@dimen/general_font__shared__d"
            android:textColor="@color/general__shared__aaaaa9"
            android:id="@id/reading__tts_notification_view__author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true" />
    </LinearLayout>

    <ImageView
        android:id="@id/reading__tts_notification_view__resume"
        android:paddingLeft="16.0dip"
        android:paddingRight="5.0dip"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/reading__tts_notification_view__resume_dark"
        android:scaleType="center" />

    <ImageView
        android:id="@id/reading__tts_notification_view__pause"
        android:paddingLeft="16.0dip"
        android:paddingRight="5.0dip"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/reading__tts_notification_view__pause_dark"
        android:scaleType="center" />

    <ImageView
        android:id="@id/reading__tts_notification_view__close"
        android:paddingLeft="5.0dip"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/reading__tts_notification_view__close_dark"
        android:scaleType="center" />
</LinearLayout>