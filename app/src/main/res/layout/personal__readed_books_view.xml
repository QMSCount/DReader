<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/general__shared__1b314a"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/personal__readed_books_view__sync"
        android:padding="10.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/general_font__shared__c"
            android:textColor="@color/general__shared__ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="50.0dip"
            android:text="@string/personal__readed_books_view__sync_closed" />

        <ImageView
            android:layout_gravity="right"
            android:id="@id/personal__readed_books_view__sync_switcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20.0dip"
            android:src="@drawable/general__shared__switch" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/personal__readed_books_view__header_bg"
            android:scaleType="center" />

        <com.duokan.reader.ui.general.DkLabelView
            android:textSize="@dimen/general_font__shared__c"
            android:textColor="@color/general__shared__ffffff"
            android:layout_gravity="center_horizontal"
            android:id="@id/personal__readed_books_view__ranking_total"
            android:paddingLeft="110.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <ImageView
        android:gravity="bottom|center"
        android:background="@drawable/personal__readed_books_view__bottom_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip" />

    <View
        android:background="@color/general__shared__ffffff"
        android:layout_width="fill_parent"
        android:layout_height="20.0dip" />

    <View
        android:background="@color/general__shared__cccccc"
        android:layout_width="fill_parent"
        android:layout_height="1.0px" />
</LinearLayout>