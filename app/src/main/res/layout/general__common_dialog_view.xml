<?xml version="1.0" encoding="utf-8"?>
<com.duokan.core.ui.BoxView android:background="@color/general__shared__dialog"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20.0dip"
            android:paddingRight="20.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minWidth="310.0dip">

            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/general_font__shared__t3"
                    android:textColor="@color/general__shared__c2"
                    android:gravity="fill"
                    android:layout_gravity="center_horizontal"
                    android:id="@id/general__common_dialog_view__title"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip" />

                <TextView
                    android:textSize="@dimen/general_font__shared__t3"
                    android:textColor="@color/general__shared__c6"
                    android:ellipsize="end"
                    android:gravity="fill"
                    android:layout_gravity="center_horizontal"
                    android:id="@id/general__common_dialog_view__prompt"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip"
                    android:maxLines="5" />
            </LinearLayout>

            <FrameLayout
                android:id="@id/general__common_dialog_view__extra_content_frame"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_weight="1.0" />

            <LinearLayout
                android:orientation="vertical"
                android:id="@id/general__common_dialog_view__check_frame"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip" />
        </LinearLayout>

        <View
            android:background="@color/general__shared__c9"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginTop="30.0dip" />

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@id/general__common_dialog_view__button_frame"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/general__shared__vert_line"
            android:showDividers="middle" />
    </LinearLayout>
</com.duokan.core.ui.BoxView>