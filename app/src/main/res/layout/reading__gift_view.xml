<?xml version="1.0" encoding="utf-8"?>
<com.duokan.reader.ui.reading.GiftView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_gravity="top"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.duokan.reader.ui.general.DkBigFaceView
            android:layout_gravity="center_horizontal"
            android:id="@id/reading__gift_view__face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40.0dip" />

        <com.duokan.reader.ui.general.DkLabelView
            android:textSize="30.0dip"
            android:layout_gravity="center_horizontal"
            android:id="@id/reading__gift_view__label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:text="@string/reading__gift_view__label" />

        <View
            android:id="@id/reading__gift_view__space"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip" />

        <com.duokan.core.ui.FrameScrollView
            android:id="@id/reading__gift_view__scroll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <com.duokan.reader.ui.general.deprecatedDkTextView
                android:textSize="20.0dip"
                android:id="@id/reading__gift_view__msg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </com.duokan.core.ui.FrameScrollView>

        <com.duokan.reader.ui.general.DkLabelView
            android:textSize="15.0dip"
            android:layout_gravity="right"
            android:id="@id/reading__gift_view__from"
            android:paddingBottom="20.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:text="xxx于xxxx年x月x日" />
    </LinearLayout>
</com.duokan.reader.ui.reading.GiftView>