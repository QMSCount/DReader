<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:gravity="center_vertical"
    android:layout_width="fill_parent"
    android:layout_height="60.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:id="@id/store__ranking_list_item_view__top"
        android:background="@color/general__shared__bcbcbc"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@id/store__ranking_list_item_view__icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <com.duokan.reader.ui.general.DkLabelView
        android:textSize="@dimen/general_font__shared__b"
        android:textColor="@color/general__shared__333333"
        android:id="@id/store__ranking_list_item_view__name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip"
        android:maxLines="1"
        android:layout_toRightOf="@id/store__ranking_list_item_view__icon"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/store__discript_view__more_root"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <com.duokan.reader.ui.general.DkLabelView
            android:textSize="@dimen/general_font__shared__b"
            android:textColor="@color/general__shared__333333"
            android:layout_gravity="center_vertical"
            android:id="@id/store__discript_view__more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip"
            android:text="@string/store__shared__more" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@id/store__discript_view__more_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/general__shared__more" />
    </LinearLayout>

    <View
        android:id="@id/store__ranking_list_item_view__bottom"
        android:layout_width="fill_parent"
        android:layout_height="2.0px"
        android:layout_alignParentBottom="true" />
</RelativeLayout>