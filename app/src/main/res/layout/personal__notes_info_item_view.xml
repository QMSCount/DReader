<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@id/personal__notes_info_item_view__root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17.0dip"
        android:layout_marginTop="15.0dip"
        android:layout_marginBottom="8.0dip">

        <ImageView
            android:id="@id/personal__notes_info_item_view__color"
            android:layout_width="3.0dip"
            android:layout_height="15.0dip"
            android:contentDescription="@null" />

        <com.duokan.reader.ui.general.DkLabelView
            android:textSize="@dimen/general_font__shared__c"
            android:textColor="@color/general__shared__999999"
            android:id="@id/personal__notes_info_item_view__time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15.0dip">

        <com.duokan.reader.ui.general.PinView
            android:textSize="@dimen/general_font__shared__c"
            android:textColor="@color/general__shared__8d6752"
            android:ellipsize="end"
            android:id="@id/personal__notes_info_item_view__sample"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.0dip" />

        <com.duokan.reader.ui.general.deprecatedDkTextView
            android:textSize="@dimen/general_font__shared__c"
            android:textColor="@color/general__shared__555555"
            android:id="@id/personal__notes_info_item_view__note"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginTop="15.0dip" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:visibility="invisible"
            android:layout_width="fill_parent"
            android:layout_height="15.0dip"
            android:contentDescription="@null" />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/personal__notes_info_item_view__footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0.0dip"
                android:layout_height="1.0dip"
                android:layout_weight="1.0"
                android:contentDescription="@null" />

            <RelativeLayout
                android:id="@id/personal__notes_info_item_view__delete"
                android:layout_width="35.0dip"
                android:layout_height="25.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginBottom="15.0dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/personal__feed_item_view__delete"
                    android:scaleType="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/personal__notes_info_item_view__share"
                android:layout_width="35.0dip"
                android:layout_height="25.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginBottom="15.0dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/personal__note_item_share"
                    android:scaleType="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null" />
            </RelativeLayout>

            <ImageView
                android:id="@id/personal__notes_info_item_view__read"
                android:layout_width="35.0dip"
                android:layout_height="25.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginBottom="15.0dip"
                android:src="@drawable/personal__note_item_go_to_book"
                android:scaleType="center"
                android:contentDescription="@null" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>