<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.duokan.reader.ui.general.DkLabelView
        android:textSize="@dimen/general_font__shared__t3"
        android:textColor="@color/general__shared__c2"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@id/account__share_choice_view__title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:text="@string/share_send"
        android:includeFontPadding="false" />

    <com.duokan.core.ui.GridItemsView
        android:id="@id/account__share_choice_view__grid"
        android:paddingTop="10.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/general__shared__c9"
        android:layout_width="fill_parent"
        android:layout_height="1.0px" />

    <TextView
        android:textSize="@dimen/general_font__shared__t3"
        android:textColor="@color/general__shared__c6"
        android:gravity="center"
        android:id="@id/account__share_choice_view__cancel"
        android:paddingTop="20.0dip"
        android:paddingBottom="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/general__shared__cancel" />
</LinearLayout>