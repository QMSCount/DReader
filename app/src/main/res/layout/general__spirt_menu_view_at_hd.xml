<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@id/general__spirt_mene_view__dark_bg"
        android:background="@color/general__shared__00000099"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.duokan.core.ui.BoxView
        android:id="@id/general__spirt_mene_view__page"
        android:background="@drawable/general__shared__center_dialog_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:maxWidth="420.0dip"
        android:layout_centerInParent="true">

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="7.0dip"
            android:paddingBottom="8.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.duokan.reader.ui.general.DkLabelView
                android:textSize="@dimen/general_font__shared__c"
                android:textColor="@color/general__shared__666666"
                android:id="@id/general__spirt_mene_view__title"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:layout_marginBottom="7.0dip" />

            <LinearLayout
                android:orientation="vertical"
                android:id="@id/general__spirt_mene_view__content_items"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip" />

            <LinearLayout
                android:orientation="vertical"
                android:id="@id/general__spirt_mene_view__extra_view"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.duokan.core.ui.BoxView>
</RelativeLayout>