                    android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:src="@drawable/personal__bookshelf_style_popup_view__classic_image"
                    android:scaleType="fitXY" android:adjustViewBounds="true" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <View android:background="#ffcbcbcb" android:layout_width="fill_parent"
        android:layout_height="1.0px" android:layout_marginTop="15.0dip"
        android:contentDescription="@null" />
