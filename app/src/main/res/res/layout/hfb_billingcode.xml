<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="#ffffffff"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/hfb_title" />
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:fillViewport="true">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:background="@drawable/hfb_info_bg"
                android:paddingLeft="5.0dip" android:paddingRight="5.0dip"
                android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textColor="@color/hfb_black"
                    android:layout_gravity="center_horizontal" android:id="@id/tv_title"
                    android:text="@string/hfb_main_title" style="@style/hfb_app_title_style" />
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
                    android:layout_marginBottom="10.0dip">
                    <TextView android:textSize="16.0sp" android:textColor="@color/hfb_black"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/hfb_goods_name" />
                    <TextView android:textSize="16.0sp" android:textColor="@color/hfb_black"
                        android:id="@id/tv_goodsName" android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hfb_goods_name_content" />
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="5.0dip" android:layout_marginBottom="10.0dip">
                    <TextView android:textSize="16.0sp" android:textColor="@color/hfb_black"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/hfb_order_price" />
                    <TextView android:textSize="16.0sp" android:textColor="@color/hfb_black"
                        android:id="@id/tv_amount" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="5.0dip" android:layout_marginBottom="10.0dip">
                    <TextView android:textSize="16.0sp" android:textColor="@color/hfb_black"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/hfb_customer_service_phone" />
                    <TextView android:textSize="16.0sp" android:textColor="@color/hfb_black"
                        android:id="@id/tv_cusphone" android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hfb_customer_service_phone_number" />
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@id/ll_phone"
                    android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip" android:layout_marginTop="5.0dip"
                    android:layout_marginBottom="10.0dip">
                    <TextView android:textSize="16.0sp" android:textColor="@color/hfb_black"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/hfb_pay_by_phone" />
                    <EditText android:textSize="16.0sp" android:textColor="#ff333333"
                        android:id="@id/et_phone" android:background="@drawable/hfb_ipt_bg"
                        android:layout_width="fill_parent" android:layout_height="wrap_content"
                        android:layout_marginRight="10.0dip" android:singleLine="true"
                        android:inputType="phone" />
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal"
                    android:id="@id/ll_code" android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_marginTop="5.0dip"
                    android:layout_marginBottom="10.0dip">
                    <TextView android:textSize="16.0sp" android:textColor="@color/hfb_black"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/hfb_confirm_code" />
                    <EditText android:textSize="16.0sp" android:textColor="#ff333333"
                        android:id="@id/et_code" android:background="@drawable/hfb_ipt_bg"
                        android:layout_width="0.0dip" android:layout_height="wrap_content"
                        android:singleLine="true" android:layout_weight="1.0"
                        android:inputType="number" />
                    <com.umpay.huafubao.view.CountDownButton android:textSize="12.0sp"
                        android:textColor="#ff007bb4" android:id="@id/btn_code"
                        android:background="@drawable/hfb_btn2" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_marginLeft="15.0dip"
                        android:layout_marginRight="10.0dip"
                        android:text="@string/hfb_get_confirm_code" />
                </LinearLayout>
            </LinearLayout>
            <TextView android:textColor="@color/hfb_gray" android:id="@id/tv_goodsInfo"
                android:background="@drawable/hfb_merdesc_info_bg"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip" android:layout_marginTop="10.0dip"
                android:layout_marginRight="5.0dip" />
            <TextView android:textColor="@color/hfb_gray" android:id="@id/tv_smsInfo"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip" android:layout_marginTop="10.0dip"
                android:layout_marginRight="5.0dip" />
            <Button android:layout_gravity="center_horizontal" android:id="@id/btn_pay"
                android:background="@drawable/hfb_red_btn" android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip" android:layout_marginLeft="40.0dip"
                android:layout_marginTop="20.0dip" android:layout_marginRight="40.0dip"
                android:layout_marginBottom="20.0dip" android:text="@string/hfb_confirm"
                style="@style/hfb_txt_style" />
            <TextView android:textColor="@color/hfb_gray" android:id="@id/tv_smsInfo2"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip" android:layout_marginRight="10.0dip"
                android:layout_marginBottom="10.0dip" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>