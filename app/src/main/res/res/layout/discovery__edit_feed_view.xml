<?xml version="1.0" encoding="utf-8"?>
<com.duokan.core.ui.BoxView android:background="#ffffffff" android:layout_width="fill_parent"
    android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <com.duokan.reader.ui.general.PageHeaderView
            android:id="@id/discovery__edit_feed_view__header" android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <com.duokan.core.ui.DkEditorView android:textSize="@dimen/general_font__shared__c"
            android:id="@id/discovery__edit_feed_view__title" android:padding="15.0dip"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:hint="@string/discovery__edit_feed_view__title_hint"
            android:singleLine="true" />
        <View android:background="@color/general__shared__cccccc" android:layout_width="fill_parent"
            android:layout_height="1.0px" />
        <com.duokan.core.ui.LinearScrollView android:orientation="vertical"
            android:id="@id/discovery__edit_feed_view__feed" android:layout_width="fill_parent"
            android:layout_height="0.0dip" android:layout_weight="1.0">
            <com.duokan.core.ui.DkEditorView android:textSize="@dimen/general_font__shared__c"
                android:id="@id/discovery__edit_feed_view__reason" android:padding="15.0dip"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:hint="@string/discovery__edit_feed_view__reason_hint" />
        </com.duokan.core.ui.LinearScrollView>
    </LinearLayout>
    <TextView android:textSize="@dimen/general_font__shared__c"
        android:textColor="@color/general__shared__ffffff"
        android:layout_gravity="bottom|center|left" android:id="@id/discovery__edit_feed_view__add"
        android:background="@drawable/general__shared__rounded_corner_button"
        android:padding="10.0dip" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_margin="15.0dip"
        android:text="@string/discovery__edit_feed_view__add_book" />
</com.duokan.core.ui.BoxView>