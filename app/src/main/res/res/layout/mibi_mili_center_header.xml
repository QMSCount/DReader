<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:payment="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:orientation="vertical" android:id="@id/head_normal"
        android:layout_width="fill_parent" android:layout_height="wrap_content">
        <RelativeLayout android:background="@drawable/mibi_milicenter_header_bg"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/mibi_milicenter_header_height"
            android:layout_margin="@dimen/mibi_milicenter_header_marging">
            <com.xiaomi.payment.ui.component.AdaptiveBalanceRelativeLayout
                android:id="@id/balance_value" android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mibi_milicenter_header_adaptive_padding"
                android:layout_centerInParent="true" payment:mibi_gravityStyle="wholeCenter">
                <com.mipay.common.component.MiuiDigitFontTextView
                    android:textSize="@dimen/mibi_text_size_milicenter_balance"
                    android:textColor="@color/mibi_text_color_milicenter_header"
                    android:id="@id/integer_part" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:singleLine="true"
                    android:layout_alignParentTop="true" payment:mibi_fontStyle="normal_0" />
                <com.mipay.common.component.MiuiDigitFontTextView
                    android:textSize="@dimen/mibi_text_size_milicenter_balance"
                    android:textColor="@color/mibi_text_color_milicenter_header"
                    android:id="@id/fractional_part" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:singleLine="true"
                    android:layout_toRightOf="@id/integer_part" android:layout_alignParentTop="true"
                    payment:mibi_fontStyle="normal_0" />
                <TextView android:textSize="@dimen/mibi_text_size_small"
                    android:textColor="@color/mibi_text_color_milicenter_header"
                    android:id="@id/unit" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="@string/mibi_unit"
                    android:singleLine="true" android:layout_alignParentTop="true" />
            </com.xiaomi.payment.ui.component.AdaptiveBalanceRelativeLayout>
            <TextView android:textSize="@dimen/mibi_text_size_small"
                android:textColor="@color/mibi_text_color_milicenter_header"
                android:id="@id/recharge"
                android:paddingRight="@dimen/mibi_milicenter_header_recharge_marging_right"
                android:paddingBottom="@dimen/mibi_milicenter_header_recharge_marging_bottom"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="@string/mibi_btn_recharge_large" android:singleLine="true"
                android:drawableRight="@drawable/mibi_milicenter_header_arrow"
                android:layout_alignParentRight="true" android:layout_alignParentBottom="true" />
        </RelativeLayout>
        <View android:background="@color/mibi_color_home_grid_line"
            android:layout_width="fill_parent" android:layout_height="@dimen/mibi_divider" />
        <LinearLayout android:gravity="center" android:orientation="horizontal"
            android:id="@id/giftcard" android:visibility="invisible"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/mibi_milicenter_giftcard_height">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="@drawable/mibi_giftcard_icon" android:scaleType="fitCenter" />
            <TextView android:textSize="@dimen/mibi_text_size_milicenter_giftcard"
                android:textColor="@color/mibi_text_color_red" android:id="@id/giftcard_with_num"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip" android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout android:id="@id/header_progress_layout"
        android:background="@drawable/mibi_milicenter_header_bg" android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mibi_milicenter_header_height"
        android:layout_margin="@dimen/mibi_milicenter_header_marging">
        <ProgressBar android:layout_gravity="center" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:indeterminateOnly="true"
            style="@style/Mibi.Widget.ProgressBar.Dark" />
    </FrameLayout>
</FrameLayout>