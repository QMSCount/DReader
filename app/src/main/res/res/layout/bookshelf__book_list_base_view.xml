                android:layout_height="fill_parent"
                android:src="@drawable/store__store_search_root_view__cancel"
                android:scaleType="center" />
        </LinearLayout>
        <com.duokan.reader.ui.general.DkWebListView
            android:id="@id/bookshelf__weblist_base_view__weblist"
            android:layout_width="fill_parent" android:layout_height="0.0dip"
            android:layout_weight="1.0" />
        <FrameLayout android:id="@id/bookshelf__weblist_base_view__body_bottom"
            android:layout_width="fill_parent" android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>