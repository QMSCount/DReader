            android:id="@id/bookshelf__weblist_base_view__search"
            android:background="@drawable/bookshelf__web_list_view__search"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip" android:layout_marginTop="10.0dip"
            android:layout_marginRight="15.0dip" android:layout_marginBottom="5.0dip">
